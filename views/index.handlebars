<div class="container">
  <div class="row">
    <div class="col-12 main-title">
      <h1>Eat the Burger!</h1>
    </div>
  </div>
  <div class = "row">
    <div class="col-12 col-md-4 title">
      <h2>Available Burgers</h2>  
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-12 col-md-4 title">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>
        <button type="submit" class="add-burg">Add Burger</button>
      </form>
    </div>
    <div class="col-12 col-md-4 title">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <footer class="footer col-12">
        <p> By: T.J. Hooker || <a href="https://github.com/tyrelhooker/burger">Burger Github Repo</a></p>
    </footer>  
  </div>
</div>

